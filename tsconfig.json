{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*.spec.ts", 
    "src/utils.ts",
    "src/scrapers/unionb-tariff-lines.ts",
    "src/scrapers/unionb-tariff.ts"
  ]
}
