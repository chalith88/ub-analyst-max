{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,

    "types": ["node"],
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*.spec.ts", 
    "src/utils.ts",
    "src/scrapers/unionb-tariff-lines.ts",
    "src/scrapers/unionb-tariff.ts",
    "src/scrapers/seylan-tariff.ts",
    "src/scrapers/ndb-tariff.ts",
    "src/scrapers/hnb.ts",
    "src/scrapers/ndb.ts", 
    "src/scrapers/seylan.ts",
    "src/types.ts"
  ]
}
